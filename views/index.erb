<div class="row row-centered">
  <h3>Your Move:</h3>
</div>

<form role="form" action="/throw" method="POST">
  <div class="row row-centered">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="form-group">
      <select name="throw" class="form-control" data-style="btn-info">
        <option value="rock">Rock</option>
        <option value="paper">Paper</option>
        <option value="scissors">Scissors</option>
      </select>
    </div>
  </div>
  <div class="col-md-4"></div>
  </div>

  <div class="row row-centered">
    <button type="submit" class="btn btn-default">Throw</button>
  </div>
</form>